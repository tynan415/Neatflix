<!DOCTYPE html>
<html>
  <head>
    <title>Neatflix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% if current_user %>
    <script>
      window.currentUser = {
        "id": <%= current_user.id %>,
        "name": "<%= current_user.name %>",
        "email": "<%= current_user.email %>"
      }
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
